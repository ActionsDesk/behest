{
  "name": "@ActionsDesk/behest",
  "version": "1.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "debug": "node --inspect-brk $(which jest) --detectOpenHandles --skipFilter --runTestsByPath __tests__/main.debug.test.ts -t",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ActionsDesk/behest.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Jason Macgowan <1389531+jasonmacgowan@users.noreply.github.com",
  "license": "MIT",
  "dependencies": {
    "yaml": "^1.10.0",
    "@actions/core": "^1.2.6",
    "@actions/github": "^2.0.1"
  },
  "devDependencies": {
    "@types/jest": "^24.9.0",
    "@types/node": "^12.12.25",
    "@typescript-eslint/parser": "^2.16.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^22.21.0",
    "husky": "^4.0.10",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "js-yaml": "^3.13.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run all && git diff --exit-code"
    }
  }
}
